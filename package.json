{
	"name": "vue-stars",
	"version": "1.1.3",
	"description": "Flexible VueJS input control for ratings (stars, etc.)",
	"author": "richardtallent <richard@tallent.us>",
	"license": "MIT",
	"repository": "https://github.com/richardtallent/vue-stars",
	"homepage": "https://tallent.us/vue-stars/",
	"private": false,
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"bundle": "vue-cli-service build --target lib --name VueStars ./src/components/VueStars.vue",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"vue": "^2.5.21"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.2.0",
		"@vue/cli-plugin-eslint": "^3.2.1",
		"@vue/cli-service": "^3.2.0",
		"@vue/eslint-config-prettier": "^4.0.1",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.11.0",
		"eslint-plugin-vue": "^5.0.0",
		"node-sass": "^4.11.0",
		"sass-loader": "^7.1.0",
		"vue-template-compiler": "^2.5.21",
		"stylelint": "^9.9.0",
		"stylelint-config-standard": "^18.2.0"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/recommended",
			"@vue/prettier"
		],
		"rules": {
			"quotes": [
				"error",
				"double",
				{
					"avoidEscape": true
				}
			],
			"comma-dangle": [
				"error",
				{
					"arrays": "ignore",
					"objects": "always-multiline",
					"imports": "ignore",
					"exports": "never",
					"functions": "ignore"
				}
			],
			"arrow-parens": 0,
			"no-tabs": 0,
			"indent": [
				"error",
				"tab",
				{
					"SwitchCase": 1
				}
			],
			"no-console": "warn",
			"generator-star-spacing": 0,
			"vue/max-attributes-per-line": 0,
			"vue/html-self-closing": [
				2,
				{
					"html": {
						"void": "never",
						"normal": "always",
						"component": "always"
					},
					"svg": "always",
					"math": "always"
				}
			]
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 11"
	],
	"prettier": {
		"useTabs": true,
		"semi": false,
		"singleQuote": false,
		"bracketSpacing": true,
		"trailingComma": "es5"
	},
	"stylelint": {
		"extends": "stylelint-config-standard",
		"rules": {
			"indentation": "tab"
		}
	}
}
